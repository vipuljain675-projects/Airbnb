<%- include('../partials/head') %>
<body>
<%- include('../partials/nav') %>

<main class="container mt-5">
  <h2 class="mb-4">Confirm Booking</h2>

  <form action="/bookings" method="POST">

    <input type="hidden" name="homeId" value="<%= home._id %>">
    <input type="hidden" name="homeName" value="<%= home.houseName %>">
    <input type="hidden" name="pricePerNight" value="<%= home.price %>">

    <div class="row mb-3">
      <div class="col">
        <label>Check In</label>
        <input type="date" name="checkIn" class="form-control" required>
      </div>
      <div class="col">
        <label>Check Out</label>
        <input type="date" name="checkOut" class="form-control" required>
      </div>
    </div>

    <input name="firstName" class="form-control mb-2" placeholder="First Name" required>
    <input name="lastName" class="form-control mb-2" placeholder="Last Name" required>
    <input name="phone" class="form-control mb-2" placeholder="Phone" required>
    <input name="email" type="email" class="form-control mb-3" placeholder="Email" required>

    <button class="btn btn-primary">Confirm Booking</button>
  </form>
</main>

</body>
</html>
