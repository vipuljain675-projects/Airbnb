<%- include('../partials/head') %>
<body class="bg-light">
<%- include('../partials/nav') %>

<% 
   const pendingBookings = bookings.filter(b => b.status === 'Pending');
   const historyBookings = bookings.filter(b => b.status !== 'Pending');
   const cancelledCount = historyBookings.filter(b => b.status === 'Cancelled').length;
%>

<main class="container mb-5" style="margin-top: 180px; max-width: 1200px;"> <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
      <div>
        <h2 class="fw-bold mb-1" style="color: #222222;">Reservation Manager</h2>
        <p class="text-secondary mb-0" style="font-size: 0.95rem;">Manage your incoming and past bookings.</p>
      </div>

      <ul class="nav nav-pills bg-white p-1 rounded-pill shadow-sm border" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active rounded-pill fw-bold px-4" id="pills-req-tab" data-bs-toggle="pill" data-bs-target="#pills-req" type="button" role="tab">
                Requests <span class="badge bg-dark ms-2 rounded-circle"><%= pendingBookings.length %></span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link rounded-pill fw-bold px-4 text-secondary" id="pills-hist-tab" data-bs-toggle="pill" data-bs-target="#pills-hist" type="button" role="tab">
                History 
                <% if (cancelledCount > 0) { %>
                    <span class="badge bg-danger bg-opacity-10 text-danger ms-2 rounded-pill" style="font-size: 0.7rem;"><%= cancelledCount %> Cancelled</span>
                <% } %>
            </button>
        </li>
      </ul>
  </div>

  <div class="tab-content" id="pills-tabContent">
    
    <div class="tab-pane fade show active" id="pills-req" role="tabpanel">
        <% if (pendingBookings.length === 0) { %>
            <div class="text-center py-5 mt-4 bg-white rounded-4 border border-dashed">
                <div class="mb-3 opacity-25"><i class="bi bi-inbox-fill fs-1 text-dark"></i></div>
                <h5 class="fw-bold text-dark">All caught up!</h5>
                <p class="text-secondary small">You have no pending requests at the moment.</p>
            </div>
        <% } else { %>
            <div class="d-flex flex-column gap-4">
                <% pendingBookings.forEach(booking => { %>
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden request-card">
                        <div class="row g-0 h-100">
                            <div class="col-md-4 position-relative">
                                <img src="<%= booking.homeId.photoUrl[0] %>" alt="" class="w-100 h-100 object-fit-cover" style="min-height: 220px;">
                                <div class="position-absolute top-0 start-0 p-3">
                                    <span class="badge bg-white text-dark shadow-sm fw-bold">â‚¹<%= booking.totalPrice %> payout</span>
                                </div>
                            </div>
                            <div class="col-md-8 p-4 d-flex flex-column justify-content-between">
                                <div>
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="fw-bold mb-0"><%= booking.homeName %></h5>
                                        <div class="text-secondary small"><%= new Date(booking.createdAt).toLocaleDateString() %></div>
                                    </div>
                                    <div class="d-flex align-items-center gap-3 mb-3">
                                        <div class="d-flex align-items-center gap-2 bg-light px-3 py-2 rounded-3">
                                            <i class="bi bi-person-fill text-secondary"></i>
                                            <span class="fw-bold"><%= booking.userId.firstName %> <%= booking.userId.lastName %></span>
                                        </div>
                                        <div class="text-secondary small">
                                            <%= booking.checkIn.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %> - 
                                            <%= booking.checkOut.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 mt-2">
                                    <form action="/host/manage-bookings" method="POST" class="flex-grow-1 m-0">
                                        <input type="hidden" name="bookingId" value="<%= booking._id %>">
                                        <input type="hidden" name="action" value="Confirmed">
                                        <button class="btn btn-dark w-100 rounded-pill py-2 fw-bold hover-scale">Accept</button>
                                    </form>
                                    <form action="/host/manage-bookings" method="POST" class="m-0">
                                        <input type="hidden" name="bookingId" value="<%= booking._id %>">
                                        <input type="hidden" name="action" value="Rejected">
                                        <button class="btn btn-outline-danger w-100 rounded-pill py-2 fw-bold hover-scale px-4">Decline</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div class="tab-pane fade" id="pills-hist" role="tabpanel">
        
        <% if (historyBookings.length === 0) { %>
            <div class="text-center py-5 text-muted">No past bookings found.</div>
        <% } else { %>
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-uppercase small text-secondary">
                            <tr>
                                <th class="ps-5 py-4 border-0" style="min-width: 200px;">Guest</th>
                                <th class="py-4 border-0" style="min-width: 200px;">Contact Info</th>
                                <th class="py-4 border-0" style="min-width: 150px;">Property</th>
                                <th class="py-4 border-0">Dates</th>
                                <th class="py-4 border-0">Status</th>
                                <th class="text-end pe-5 py-4 border-0">Payout</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            <% historyBookings.forEach(booking => { %>
                                <tr class="history-row">
                                    <td class="ps-5 py-4">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center fw-bold small" style="width: 45px; height: 45px;">
                                                <%= booking.userId.firstName.charAt(0) %>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark"><%= booking.userId.firstName %> <%= booking.userId.lastName %></div>
                                                <div class="small text-muted">Guest</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="py-4">
                                        <div class="d-flex align-items-center gap-2 text-secondary">
                                            <i class="bi bi-envelope"></i>
                                            <a href="mailto:<%= booking.userId.email %>" class="text-decoration-none text-dark fw-bold small">
                                                <%= booking.userId.email %>
                                            </a>
                                        </div>
                                    </td>

                                    <td class="py-4">
                                        <div class="fw-bold text-secondary text-truncate" style="max-width: 180px;">
                                            <%= booking.homeName %>
                                        </div>
                                    </td>

                                    <td class="small text-secondary py-4">
                                        <div class="fw-bold"><%= booking.checkIn.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %> - <%= booking.checkOut.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %></div>
                                        <div class="text-muted"><%= new Date(booking.checkIn).getFullYear() %></div>
                                    </td>

                                    <td class="py-4">
                                        <% if (booking.status === 'Confirmed') { %>
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3 py-2">Accepted</span>
                                        <% } else if (booking.status === 'Rejected') { %>
                                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger rounded-pill px-3 py-2">Declined</span>
                                        <% } else if (booking.status === 'Cancelled') { %>
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary rounded-pill px-3 py-2">Cancelled</span>
                                        <% } %>
                                    </td>

                                    <td class="text-end pe-5 fw-bold text-dark py-4">
                                        <span class="<%= booking.status === 'Cancelled' ? 'text-decoration-line-through text-muted' : '' %>">
                                            â‚¹<%= booking.totalPrice.toLocaleString() %>
                                        </span>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% } %>

    </div>

  </div>

</main>

<style>
    .nav-pills .nav-link.active { background-color: #222222; color: white; }
    .nav-pills .nav-link { color: #717171; }
    .hover-scale:hover { transform: translateY(-1px); }
    
    /* ðŸŸ¢ Table Hover Effect */
    .history-row:hover { background-color: #f8f9fa; transition: background-color 0.2s ease; }
    
    /* ðŸŸ¢ Better Table Alignment */
    td { vertical-align: middle; }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>