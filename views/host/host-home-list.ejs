<%- include('../partials/head') %>
<body>
<%- include('../partials/nav') %>

<main class="container mt-4">
  <div class="d-flex justify-content-between mb-4">
    <h2>Your Listings</h2>
    <a href="/host/add-home" class="btn btn-primary">Add New Home</a>
  </div>

  <div class="row">
    <% homes.forEach(home => { %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="<%= home.photoUrl[0] %>" class="card-img-top">
          <div class="card-body">
            <h5><%= home.houseName %></h5>
            <p><%= home.location %></p>

            <a href="/host/edit-home/<%= home._id %>?editing=true"
               class="btn btn-sm btn-outline-secondary">Edit</a>

            <form action="/host/delete-home/<%= home._id %>" method="POST" class="d-inline">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</main>
</body>
</html>
