<%- include('../partials/head') %>
<body class="bg-light">
<%- include('../partials/nav') %>

<% 
   // Active Trips (Pending or Confirmed)
   const upcomingTrips = bookings.filter(b => b.status === 'Pending' || b.status === 'Confirmed');
   
   // Past/Cancelled Trips (Rejected or Cancelled)
   const historyTrips = bookings.filter(b => b.status === 'Cancelled' || b.status === 'Rejected');
%>

<main class="container mb-5" style="margin-top: 180px; max-width: 900px;">
  
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5 gap-3">
    <div>
      <h1 class="fw-bold mb-1">Your Trips</h1>
      <p class="text-secondary mb-0">Manage your upcoming adventures</p>
    </div>

    <ul class="nav nav-pills bg-white p-1 rounded-pill shadow-sm border" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active rounded-pill fw-bold px-4" id="pills-upcoming-tab" data-bs-toggle="pill" data-bs-target="#pills-upcoming" type="button" role="tab">
                Upcoming <span class="badge bg-dark ms-2 rounded-circle"><%= upcomingTrips.length %></span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link rounded-pill fw-bold px-4 text-secondary" id="pills-history-tab" data-bs-toggle="pill" data-bs-target="#pills-history" type="button" role="tab">
                History
            </button>
        </li>
    </ul>
  </div>

  <div class="tab-content" id="pills-tabContent">
      
      <div class="tab-pane fade show active" id="pills-upcoming" role="tabpanel">
        
        <% if (upcomingTrips.length === 0) { %>
            <div class="text-center py-5">
                <div class="mb-3 opacity-25">
                     <i class="bi bi-suitcase-lg-fill fs-1 text-dark"></i>
                </div>
                <h3 class="text-muted h5">No upcoming trips</h3>
                <p class="text-secondary mb-4">Time to dust off your bags and start planning.</p>
                <a href="/" class="btn btn-dark rounded-pill px-4 fw-bold">Start Exploring</a>
            </div>
        <% } else { %>
            <div class="d-flex flex-column align-items-center gap-5">
                <% upcomingTrips.forEach(booking => { %>
                    
                    <% 
                       let statusColor = 'bg-warning text-dark'; 
                       let statusIcon = 'bi-hourglass-split';
                       let statusText = 'Request Pending';

                       if (booking.status === 'Confirmed') {
                           statusColor = 'bg-success text-white';
                           statusIcon = 'bi-check-circle-fill';
                           statusText = 'Confirmed';
                       }
                    %>

                    <div class="card border-0 shadow-lg rounded-4 overflow-hidden w-100" style="max-width: 850px;">
                      
                      <div class="<%= statusColor %> p-3 px-4 d-flex justify-content-between align-items-center">
                          <div class="d-flex align-items-center gap-2">
                              <i class="bi <%= statusIcon %> fs-5"></i>
                              <span class="fw-bold text-uppercase" style="letter-spacing: 1px;"><%= statusText %></span>
                          </div>
                          <div class="small opacity-75">Booked on <%= new Date(booking.createdAt || Date.now()).toLocaleDateString() %></div>
                      </div>

                      <div class="row g-0">
                          <div class="col-md-8 p-4 bg-white d-flex flex-column justify-content-between">
                              <div>
                                <h3 class="fw-bold mb-1"><%= booking.homeName %></h3>
                                <p class="text-muted small mb-4"><i class="bi bi-geo-alt-fill me-1"></i> View on map</p>

                                <div class="row mb-4">
                                    <div class="col-6">
                                        <small class="text-muted fw-bold" style="font-size: 0.7rem;">CHECK-IN</small>
                                        <div class="fs-5 fw-bold"><%= booking.checkIn.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %></div>
                                        <div class="small text-muted">12:00 PM</div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted fw-bold" style="font-size: 0.7rem;">CHECK-OUT</small>
                                        <div class="fs-5 fw-bold"><%= booking.checkOut.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %></div>
                                        <div class="small text-muted">11:00 AM</div>
                                    </div>
                                </div>
                              </div>

                              <div class="border-top pt-3 mt-4 d-flex justify-content-between align-items-center">
                                  <div>
                                      <small class="text-muted">Total Paid</small>
                                      <div class="fs-4 fw-bold text-success">₹<%= booking.totalPrice %></div>
                                  </div>
                                  <form action="/cancel-booking" method="POST" onsubmit="return confirm('Are you sure you want to cancel this trip?');">
                                    <input type="hidden" name="bookingId" value="<%= booking._id %>">
                                    <button class="btn btn-outline-danger btn-sm rounded-pill px-3 fw-bold">Cancel Trip</button>
                                  </form>
                              </div>
                          </div>

                          <div class="col-md-4 bg-light p-4 d-flex flex-column align-items-center justify-content-center border-start text-center position-relative">
                              <div class="position-absolute start-0 top-0 bottom-0 border-start border-2 border-dashed" style="left: -1px;"></div>
                              <% if (booking.status === 'Confirmed') { %>
                                  <img src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=<%= booking._id %>" class="mb-3 mix-blend-multiply" style="width: 120px;">
                                  <div class="small text-muted fw-bold mb-1">Scan for Check-in</div>
                                  <div class="badge bg-dark text-white rounded-pill px-3 py-2 mt-2">Enjoy your stay!</div>
                              <% } else { %>
                                  <div class="spinner-border text-warning mb-3" style="width: 3rem; height: 3rem;"></div>
                                  <div class="fw-bold text-dark">Awaiting Approval</div>
                                  <p class="small text-muted mt-2">The host has 24 hours to respond.</p>
                              <% } %>
                          </div>
                      </div>
                    </div>

                <% }) %>
            </div>
        <% } %>
      </div>

      <div class="tab-pane fade" id="pills-history" role="tabpanel">
        
        <% if (historyTrips.length === 0) { %>
            <div class="text-center py-5 text-muted">No past bookings found.</div>
        <% } else { %>
            <div class="d-flex flex-column align-items-center gap-4">
                <% historyTrips.forEach(booking => { %>
                    
                    <% 
                       let statusColor = 'bg-secondary text-white'; 
                       let statusIcon = 'bi-slash-circle';
                       let statusText = 'Cancelled';
                       let failMessage = 'Trip Cancelled';

                       if (booking.status === 'Rejected') {
                           statusColor = 'bg-danger text-white';
                           statusIcon = 'bi-x-circle-fill';
                           statusText = 'Declined by Host';
                           failMessage = 'Booking Failed';
                       }
                    %>

                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden w-100 opacity-75" style="max-width: 850px;">
                      
                      <div class="<%= statusColor %> p-3 px-4 d-flex justify-content-between align-items-center">
                          <div class="d-flex align-items-center gap-2">
                              <i class="bi <%= statusIcon %> fs-5"></i>
                              <span class="fw-bold text-uppercase" style="letter-spacing: 1px;"><%= statusText %></span>
                          </div>
                          <div class="small opacity-75">Archived</div>
                      </div>

                      <div class="row g-0">
                          <div class="col-md-8 p-4 bg-white">
                              <h3 class="fw-bold mb-1 text-muted"><%= booking.homeName %></h3>
                              <div class="row mb-3 mt-3">
                                  <div class="col-6 text-muted">
                                    <small class="fw-bold">CHECK-IN</small><br>
                                    <%= booking.checkIn.toLocaleDateString() %>
                                  </div>
                                  <div class="col-6 text-muted">
                                    <small class="fw-bold">CHECK-OUT</small><br>
                                    <%= booking.checkOut.toLocaleDateString() %>
                                  </div>
                              </div>
                              <div class="fs-4 fw-bold text-muted text-decoration-line-through mt-2">₹<%= booking.totalPrice %></div>
                          </div>

                          <div class="col-md-4 bg-light p-4 d-flex flex-column align-items-center justify-content-center border-start text-center">
                              <i class="bi <%= statusIcon %> text-muted mb-3" style="font-size: 3rem;"></i>
                              <div class="fw-bold text-muted"><%= failMessage %></div>
                          </div>
                      </div>
                    </div>

                <% }) %>
            </div>
        <% } %>
      </div>

  </div>

</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .nav-pills .nav-link.active { background-color: #222222; color: white; }
    .nav-pills .nav-link { color: #717171; }
    .opacity-75 { opacity: 0.75; }
</style>

</body>
</html>