<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>
  <main class="container mt-4 mb-5">
    <div class="mb-3">
      <h2 class="fw-bold"><%= home.houseName %></h2>
      <p class="small text-muted">⭐ <%= home.rating %> · <span class="text-decoration-underline"><%= home.location %></span></p>
    </div>

    <div class="row mb-4">
      <div class="col-12">
        <% const photos = Array.isArray(home.photoUrl) ? home.photoUrl : [home.photoUrl] %>
        <% if (photos.length > 0) { %>
        <div id="homeCarousel" class="carousel slide rounded-4 overflow-hidden shadow-sm" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <% photos.forEach((_, index) => { %>
              <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></button>
            <% }) %>
          </div>
          <div class="carousel-inner">
            <% photos.forEach((url, index) => { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <img src="<%= url %>" class="d-block w-100" style="height: 500px; object-fit: cover;">
              </div>
            <% }) %>
          </div>
          <% if (photos.length > 1) { %>
            <button class="carousel-control-prev" type="button" data-bs-target="#homeCarousel" data-bs-slide="prev"><span class="carousel-control-prev-icon"></span></button>
            <button class="carousel-control-next" type="button" data-bs-target="#homeCarousel" data-bs-slide="next"><span class="carousel-control-next-icon"></span></button>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="border-bottom pb-4 mb-4">
          <h3>Hosted by a Superhost</h3>
          <p class="lead"><%= home.description %></p>
        </div>
        <div class="mb-4">
          <h4>Where you'll be</h4>
          <div id="map" class="rounded-4 border" style="height: 400px; width: 100%;"></div>
          <p class="mt-3 text-muted small"><%= home.location %></p>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="card shadow border-1 p-4 sticky-top" style="top: 100px;">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div><span class="fs-3 fw-bold">₹<%= home.price %></span> <span class="text-muted">night</span></div>
          </div>
          <a href="/reserve/<%= home._id %>" class="btn btn-primary btn-lg w-100 fw-bold py-3">Reserve</a>
        </div>
      </div>
    </div>
  </main>

  <script>
    const locationName = "<%= home.location %>";
    const map = L.map('map').setView([20.5937, 78.9629], 5);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '&copy; OpenStreetMap' }).addTo(map);
    if (locationName) {
      fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(locationName)}`)
        .then(res => res.json())
        .then(data => {
          if (data && data.length > 0) {
            const { lat, lon } = data[0];
            map.setView([lat, lon], 14);
            L.marker([lat, lon]).addTo(map).bindPopup(`<b>${locationName}</b>`).openPopup();
          }
        });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>