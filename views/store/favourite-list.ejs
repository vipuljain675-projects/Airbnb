<%- include('../partials/head') %>
<body class="bg-light">
<%- include('../partials/nav') %>

<main class="container" style="margin-top: 180px;">
    
    <div class="mb-4">
        <h2 class="fw-bold">Your Wishlist</h2>
        <p class="text-secondary">Homes you have saved for later.</p>
    </div>

    <% if (homes.length > 0) { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
            <% homes.forEach(home => { %>
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden">
                        
                        <div class="position-relative">
                            <a href="/homes/<%= home._id %>">
                                <img src="<%= home.photoUrl[0] %>" class="card-img-top object-fit-cover" alt="<%= home.houseName %>" style="height: 250px;">
                            </a>
                            <form action="/favourite-list/remove" method="POST" class="position-absolute top-0 end-0 m-2">
                                <input type="hidden" name="homeId" value="<%= home._id %>">
                                <button class="btn btn-light rounded-circle shadow-sm p-2 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                    <i class="bi bi-x-lg" style="font-size: 0.8rem;"></i>
                                </button>
                            </form>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title fw-bold mb-1 text-truncate"><%= home.houseName %></h5>
                            <p class="card-text text-muted small mb-2"><%= home.location %></p>
                            <div class="d-flex align-items-baseline gap-1">
                                <span class="fw-bold">â‚¹<%= home.price %></span> <span class="small text-muted">night</span>
                            </div>
                        </div>

                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <h4 class="text-muted">No favourites yet.</h4>
            <p class="text-secondary">Start exploring and save your dream homes.</p>
            <a href="/" class="btn btn-dark rounded-pill px-4 mt-2 fw-bold">Explore Homes</a>
        </div>
    <% } %>

</main>

</body>
</html>