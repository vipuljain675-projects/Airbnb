<%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container mt-5 mb-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow border-0 rounded-4">
          <div class="card-header bg-white border-0 pt-4 px-4">
            <h2 class="fw-bold text-center mb-0">
              <%= editing ? "Edit your Home" : "List a new Home" %>
            </h2>
          </div>
          
          <div class="card-body p-4">
            <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data">
              
              <div class="row mb-3">
                <div class="col-md-8">
                  <label class="form-label fw-bold">Property Name</label>
                  <input type="text" name="houseName" class="form-control p-3" value="<%= editing ? home.houseName : '' %>" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-bold">Price per Night</label>
                  <input type="number" name="price" class="form-control p-3" value="<%= editing ? home.price : '' %>" required>
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-md-8">
                  <label class="form-label fw-bold">Location</label>
                  <input type="text" name="location" class="form-control p-3" value="<%= editing ? home.location : '' %>" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label fw-bold">Rating</label>
                  <input type="number" name="rating" class="form-control p-3" step="0.1" value="<%= editing ? home.rating : '' %>" required>
                </div>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold">Property Images (Max 3)</label>
                <label for="imageUpload" class="d-block" style="cursor: pointer;">
                  <div id="imagePreview" class="rounded-4 d-flex align-items-center justify-content-start bg-light p-3 gap-3 border border-2 border-dashed" style="min-height: 150px; flex-wrap: wrap;">
                    <% if (editing && home.photoUrl) { %>
                       <% const urls = Array.isArray(home.photoUrl) ? home.photoUrl : [home.photoUrl]; %>
                       <% urls.forEach(url => { %>
                         <img src="<%= url %>" class="rounded shadow-sm" style="width: 100px; height: 100px; object-fit: cover;">
                       <% }) %>
                    <% } else { %>
                       <div class="text-center w-100 text-muted"><p class="mb-0">Click to upload</p></div>
                    <% } %>
                  </div>
                  <input type="file" id="imageUpload" name="photos" class="d-none" multiple max="3" accept="image/*" onchange="previewImages(event)">
                </label>
                <% if (editing) { %> <input type="hidden" name="oldPhotoUrls" value="<%= home.photoUrl %>"> <% } %>
              </div>

              <div class="mb-4">
                <label class="form-label fw-bold">Description</label>
                <textarea name="description" class="form-control p-3" rows="4"><%= editing ? home.description : '' %></textarea>
              </div>

              <% if (editing) { %> <input type="hidden" name="id" value="<%= home._id %>"> <% } %>

              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg fw-bold py-3"><%= editing ? "Update Home" : "Add Listing" %></button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    function previewImages(event) {
      const files = event.target.files;
      const previewContainer = document.getElementById('imagePreview');
      previewContainer.innerHTML = '';
      if (files.length > 0) {
        Array.from(files).forEach(file => {
          const reader = new FileReader();
          reader.onload = function(e) {
            const img = document.createElement('img');
            img.src = e.target.result;
            img.style.width = '100px'; img.style.height = '100px'; img.style.objectFit = 'cover';
            img.className = 'rounded shadow-sm';
            previewContainer.appendChild(img);
          }
          reader.readAsDataURL(file);
        });
      }
    }
  </script>
</body>
</html>